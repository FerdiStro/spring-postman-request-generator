<idea-plugin>
    <id>sprg</id>
    <name>Generate Spring Postman requests</name>
    <vendor>FerdiStro</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <depends optional="true" config-file="sprg-java.xml">com.intellij.java</depends>
    <depends optional="true" config-file="sprg-kotlin.xml">org.jetbrains.kotlin</depends>

    <extensionPoints>
        <extensionPoint name="postmanLineMarkerProvider"
                        interface="com.github.ferdistro.springpostmanrequestgenerator.line.PostmanLineMarkerProvider"
                        dynamic="true"/>
    </extensionPoints>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                factoryClass="com.github.ferdistro.springpostmanrequestgenerator.toolwindow.RequestGeneratorToolWindowFactory"
                id="RequestGenerator"
                icon="/META-INF/icon.svg"
                anchor="right"/>
    </extensions>
    <extensions defaultExtensionNs="org.jetbrains.kotlin">
        <supportsKotlinPluginMode supportsK1="true" supportsK2="true"/>

    </extensions>
</idea-plugin>
